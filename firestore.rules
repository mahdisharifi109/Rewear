// Ficheiro: firestore.rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Os produtos podem ser lidos por qualquer utilizador autenticado
    match /products/{productId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Um utilizador só pode ler e escrever os seus próprios dados
    match /users/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }

    // Qualquer utilizador autenticado pode ler e criar avaliações
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      // Opcional: permitir que um utilizador apague a sua própria avaliação
      allow delete: if request.auth != null && request.auth.uid == resource.data.buyerId;
    }

    // Um utilizador só pode ler/atualizar as suas próprias notificações
    match /notifications/{notificationId} {
      allow read, update: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null; // Qualquer utilizador autenticado pode despoletar a criação de uma notificação
    }

    // Regras de conversação mantêm-se, pois já são seguras
    match /conversations/{conversationId} {
      allow read, create, update: if request.auth != null && request.auth.uid in resource.data.participantIds;
    }

    match /conversations/{conversationId}/messages/{messageId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds.hasAny([request.auth.uid]);
      allow create: if request.auth != null && request.auth.uid == request.resource.data.senderId && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds.hasAny([request.auth.uid]);
    }
  }
}