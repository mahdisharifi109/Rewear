// Ficheiro: storage.rules

rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // As imagens dos produtos são públicas para leitura por qualquer pessoa
    match /products/{allPaths=**} {
      allow read: if true;
    }

    // Um utilizador só pode escrever na sua própria pasta
    // Máximo 5MB por imagem de produto, apenas imagens
    match /products/{userId}/{allPaths=**} {
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Imagens de perfil dos utilizadores
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 2 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
  }
}