rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite que qualquer pessoa leia (veja) as imagens dos produtos
    match /products/{allPaths=**} {
      allow read: if true;
    }

    // Apenas permite que um utilizador autenticado escreva (faça upload)
    // na sua própria pasta de utilizador.
    match /products/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
