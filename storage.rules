// Ficheiro: storage.rules

rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // As imagens dos produtos são públicas para leitura por qualquer pessoa
    match /products/{allPaths=**} {
      allow read: if true;
    }

    // Um utilizador só pode escrever na sua própria pasta
    match /products/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}